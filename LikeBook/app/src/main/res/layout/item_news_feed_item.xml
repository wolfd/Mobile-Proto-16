<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/post_item_margin"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView" android:layout_weight="0" />
        <TextView
                android:text="@string/person_name_example_text"
                android:layout_margin="@dimen/post_item_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/person_name_text_view"
                android:layout_weight="0" />
        <TextView
                android:text="@string/post_time_example_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/post_item_margin"
                android:id="@+id/post_time_text_view"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:gravity="start"

                android:textStyle="normal|italic"/>
    </LinearLayout>
    <TextView
            android:text="@string/post_content_example_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_content_text_view"
            android:layout_margin="@dimen/post_item_margin" />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ToggleButton
                android:text="@string/like_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/like_button"
                android:layout_weight="1"
                android:textOn="@string/unlike_text"
                android:textOff="@string/like_text"
                android:checked="false"/>
        <Button
                android:text="@string/button_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button"
                android:layout_weight="1"/>
        <Button
                android:text="@string/share_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>